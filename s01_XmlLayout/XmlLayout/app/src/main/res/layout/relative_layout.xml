<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        android:background="@drawable/user" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_toRightOf="@id/userImage"
        android:text="Relative Layout" />

    <TextView
        android:id="@+id/usertime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userName"
        android:layout_margin="8dp"
        android:layout_toRightOf="@id/userImage"
        android:text="19 dk" />

    <TextView
        android:id="@+id/userExplanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userImage"
        android:layout_margin="8dp"
        android:text="Resim açıklama" />

    <ImageView
        android:id="@+id/userShareImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/likeImage"
        android:layout_below="@id/userExplanation"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/sea"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/likeImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/like"
        android:layout_margin="8dp"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/likeImage"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@id/likeImage"
        android:text="Beğen" />

    <ImageView
        android:id="@+id/chatImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:layout_marginStart="8"
        android:layout_marginTop="8"
        android:layout_marginEnd="8"
        android:layout_marginBottom="8"
        android:layout_toRightOf="@id/like"

        android:background="@drawable/chat" />

    <TextView
        android:id="@+id/chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Yorum Yap"
        android:layout_toRightOf="@id/chatImage"
        android:layout_alignBottom="@id/chatImage"
        />

    <ImageView
        android:id="@+id/userShare"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:layout_toRightOf="@id/chat"
        android:background="@drawable/share" />

    <TextView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Paylaş"
        android:layout_toRightOf="@id/userShare"
        android:layout_alignBottom="@id/chatImage"
        android:layout_alignParentBottom=""
        />


</RelativeLayout>